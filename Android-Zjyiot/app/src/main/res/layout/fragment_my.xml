<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_f5f5f5"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="@dimen/my_status_bar_height"
            android:paddingBottom="@dimen/dp_20"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/wd_bj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/wd_txbj"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84" />
            <ImageView
                android:id="@+id/iv_header"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64" />
        </RelativeLayout>
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/white"
                android:text="欢迎使用口红机"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_balance"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@drawable/shape_tv_bg_white"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:text="积分余额:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_order"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="我的订单"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_666666"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/wd_dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wd_gd"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/color_dcdcdc"/>
        <LinearLayout
            android:id="@+id/ll_rechare"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="我要充值"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_666666"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/wd_cz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wd_gd"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/color_dcdcdc"/>
        <LinearLayout
            android:id="@+id/ll_service"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="联系客服"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_666666"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/wd_kf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wd_gd"/>
        </LinearLayout>
        <View

            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_f5f5f5"/>
        <LinearLayout
            android:id="@+id/ll_out_login"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="退出登录"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_666666"
                android:drawablePadding="@dimen/dp_10"
                android:drawableLeft="@drawable/wd_tc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>
<View
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>
<TextView
    android:gravity="center"
    android:text="Copyright@2021"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:text="北京微网时代信息技术有限公司版权所有"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>