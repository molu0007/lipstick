<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginRight="@dimen/dp_45"
    android:layout_marginLeft="@dimen/dp_45"
    android:padding="@dimen/dp_10"
    android:background="@drawable/shape_white_10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_goods"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_136"
            android:layout_height="@dimen/dp_136" />
        <ImageView
            android:id="@+id/iv_close"
            android:paddingRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:src="@drawable/gb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_brand"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_333333"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:background="@color/color_333333"
                android:id="@+id/view_color"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/tv_color"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:textColor="@color/white"
            android:text="积分挑战"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_black"
            android:id="@+id/bt_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36" />
        <Button
            android:layout_marginTop="@dimen/dp_10"
            android:text="去充值"
            android:textColor="@color/white"
            android:background="@drawable/shape_bt_bg_1"
            android:id="@+id/bt_top_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36" />
    </LinearLayout>

</LinearLayout>